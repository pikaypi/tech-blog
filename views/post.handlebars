<div class="text-center">
    <h2>{{post.title}}</h2>
    <p class="small">Created by {{post.user.username}} on {{format_date post.createdAt}}</p>
    <p>{{post.text}}</p>
    <button class="btn btn-primary">Leave a comment!</button>
</div>
<div>
    {{#each post.comments as |comment| }}
    <p>{{comment.text}}</p>
    <p class="small">Created by {{comment.user.username}} on {{format_date comment.createdAt}}</p>
    {{/each}}
</div>
        
