<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
    <div class="col-md-5">
        <h2>
            <span for="img" aria-label="pencil-paper">📝</span>
            {{!-- <a href="/post/{{post.id}}"> --}}
                {{post.title}}
            {{!-- </a> --}}
        </h2>
        <p>Created By: {{post.user.username}} on {{post.createdAt}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.text}}
        </p>
    </div>
</div>
{{/each}}
